//This function draws the PLAY screen

void play() {
  background(green);
  stroke(yellow);
  fill(yellow);
  strokeWeight(70);
  line(0, 200, 250, 200);
  line(250, 200, 250, 500);
  line(250, 500, 600, 500);
  line(600, 500, 600, 300);
  line(600, 300, 400, 300);
  line(400, 300, 400, 650);
  line(400, 650, 700, 650);
}
